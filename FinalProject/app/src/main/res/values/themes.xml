<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8E4D00</item>
        <item name="colorPrimaryVariant">#502A00</item>
        <item name="colorOnPrimary">#FFF3DD</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF893A</item>
        <item name="colorSecondaryVariant">#FFD748</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:background">#FFEFD4</item>
        <!-- Customize your theme here. -->
    </style>

    <style name= "AppTheme" parent= "Theme.FinalProject" >
        <item name= "android:textViewStyle" > @style/RobotoTextViewStyle </item>
        <item name= "android:buttonStyle" > @style/RobotoButtonStyle </item>
    </style>
    <style name= "RobotoTextViewStyle" parent= "android:Widget.TextView" >
        <item name= "android:fontFamily" > sans-serif-light </item>
    </style>
    <style name= "RobotoButtonStyle" parent= "android:Widget.Holo.Button" >
        <item name= "android:fontFamily" > sans-serif-light </item>
    </style>
</resources>